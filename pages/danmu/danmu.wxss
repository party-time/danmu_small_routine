page {
    background-color: #edf0f3;
    font-size: 9pt;
    font-family: Arial, Helvetica, sans-serif;
}

.nav {
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    position: fixed; top: 0;
    z-index: 1000;
}

.default {
    line-height: 100rpx;
    text-align: center;
    flex: 1;
    border-right: 1px solid gainsboro;
    color: #000;
    font-weight: bold;
    border-bottom: 0.5rpx solid lightgray;
}

.select {
    line-height: 100rpx;
    text-align: center;
    color: #fc5558;
    flex: 1;
    border-right: 1px solid gainsboro;
    font-weight: bold;
    border-bottom: 0.5rpx solid lightgray;
}

.content{
  margin-top: 100rpx;
}

.danmuView {
    display: flex;
    flex-direction: column;
    margin-bottom: 10rpx;
}
.danmuView .danmuFilmView {
    background-color: white;
    display: flex;
    flex-direction: row;
    padding-left: 20rpx;
    padding-right: 20rpx;

    -webkit-border-radius: 0px;
    -moz-border-radius: 0px;
    border-radius: 0px;
    -webkit-box-shadow: #666 0px 0px 10px;
    -moz-box-shadow: #666 0px 0px 10px;
    box-shadow: #666 0px 0px 10px;
    background: #EEFF99;
    behavior: url(/PIE.htc);
}

.danmuView .danmuFilmView .danmuFilmViewLabel{
    line-height: 70rpx;
}

.danmuView .danmuFilmView .danmuFilmViewName{
    line-height: 70rpx;
    font-size: 15pt;
}

.danmuView .danmuListView {
    padding-top: 15rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.danmuView .danmuListView .danmuContentView{
    display: flex;
    flex-direction: row;
    margin-bottom: 15rpx;
}





