<view class="filmcontainer">
  <view class='filmViewList'>
    <scroll-view scroll-y style="height: 1500rpx;" bindscrolltoupper="upper" bindscrolltolower="lower" scroll-with-animation="true" bindscroll="scroll">
      <view class="filmView" wx:for="{{articleList}}" wx:for-item="film" wx:for-index="idx">
        
        <view class='filmTitleContent'>
              {{film.name}}
        </view>
        <view class='picture'></view>
        <view class='filmDetailContent'>
              <text decode="{{true}}">{{film.name}}</text>
        </view>
      </view>
    </scroll-view>
  </view>
</view>